@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success">
            <MudTextField @bind-Value="CurrentPassword"
                          Label="Current password"
                          Variant="Variant.Outlined"
                          InputType="@currentPasswordInput"
                          Required="true"
                          RequiredError="This field is required"
                          Adornment="Adornment.End"
                          AdornmentIcon="@currentPasswordIcon"
                          OnAdornmentClick="() => TogglePasswordVisibility(ref currentPasswordVisible, ref currentPasswordInput, ref currentPasswordIcon)"
                          Class="mb-3" />

            <MudTextField @bind-Value="NewPassword"
                          Label="New password"
                          Variant="Variant.Outlined"
                          InputType="@newPasswordInput"
                          Required="true"
                          Validation="@ValidatePassword"
                          RequiredError="This field is required"
                          Adornment="Adornment.End"
                          AdornmentIcon="@newPasswordIcon"
                          OnAdornmentClick="() => TogglePasswordVisibility(ref newPasswordVisible, ref newPasswordInput, ref newPasswordIcon)"
                          Class="mb-3" />

            <MudTextField @bind-Value="ConfirmPassword"
                          Label="Repeat password"
                          Variant="Variant.Outlined"
                          Validation="@ValidateRepeatPassword"
                          InputType="@confirmPasswordInput"
                          Required="true"
                          RequiredError="This field is required"
                          Adornment="Adornment.End"
                          AdornmentIcon="@confirmPasswordIcon"
                          OnAdornmentClick="() => TogglePasswordVisibility(ref confirmPasswordVisible, ref confirmPasswordInput, ref confirmPasswordIcon)"
                          Class="mb-3" />
        </MudForm>
    </DialogContent>
    <DialogActions>

        <MudButton Variant="Variant.Outlined"
                   Color="Color.Success"
                   OnClick="CancelAsync">
            Cancel
        </MudButton>

        <MudButton Variant="Variant.Filled"
                   Color="Color.Success"
                   Size="@Size.Medium"
                   OnClick="Submit">
            Save
        </MudButton>
    </DialogActions>
</MudDialog>