@using PersonalDiary.Business.Models.Diaries
@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.body1" Class="mt-4">@Entry?.Description</MudText>
        <MudText Typo="Typo.caption" Class="mt-4">Created on: @Entry?.CreationDate.ToShortDateString()</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close" Color="Color.Primary" Variant="Variant.Outlined">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }

    [Parameter]
    public DiaryBiz Entry { get; set; }

    private void Close()
    {
        MudDialog.Close();
    }
} 